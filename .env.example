# ============================================
# JuiceQu - Environment Variables Template
# ============================================
# Copy file ini ke .env dan isi dengan nilai yang benar
# JANGAN commit file .env ke repository!
# ============================================

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://username:password@localhost:5432/juicequ

# ===================
# JWT AUTHENTICATION
# ===================
JWT_SECRET_KEY=your-super-secret-key-min-32-characters-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# KOLOSAL AI
# ===================
KOLOSAL_API_KEY=your-kolosal-api-key
KOLOSAL_API_URL=https://api.kolosal.ai/v1
KOLOSAL_MODEL=qwen-3-30b

# ===================
# GOOGLE CLOUD
# ===================
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET_NAME=juicequ-assets

# ===================
# CHROMADB (Vector Database)
# ===================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# ===================
# MIDTRANS (Payment Gateway)
# ===================
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# ===================
# APP SETTINGS
# ===================
APP_ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000
