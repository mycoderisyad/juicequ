# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
POSTGRES_USER=juicequ
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=juicequ_db

# ===========================================
# APPLICATION
# ===========================================
APP_ENV=development
DEBUG=true

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-min-32-characters

# Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000

# ===========================================
# AI SERVICES
# ===========================================
GEMINI_API_KEY=your-gemini-api-key
KOLOSAL_API_KEY=your-kolosal-api-key
KOLOSAL_API_BASE=https://api.kolosal.ai/v1

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif

# ===========================================
# GOOGLE OAUTH (Optional)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# FRONTEND URL
# ===========================================
FRONTEND_URL=http://localhost:3000

# ===========================================
# FRONTEND (NEXT_PUBLIC)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_STORAGE_URL=http://localhost:8000
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true

# ===========================================
# BACKUP
# ===========================================
BACKUP_RETENTION_DAYS=7
