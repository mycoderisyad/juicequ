# ===========================================
# JuiceQu Frontend - Environment Variables
# ===========================================
# Copy this file to .env.local and fill with your values

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL (FastAPI)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Storage URL for uploaded files
NEXT_PUBLIC_STORAGE_URL=http://localhost:8000

# ===========================================
# APP SETTINGS
# ===========================================
# Options: development, staging, production
NEXT_PUBLIC_APP_ENV=development

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable voice chat feature
NEXT_PUBLIC_ENABLE_VOICE=true

# Enable/disable AI chat feature
NEXT_PUBLIC_ENABLE_AI_CHAT=true
