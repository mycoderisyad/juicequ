# =============================================================================
# JuiceQu Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=JuiceQu API
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================
# For development (SQLite)
DATABASE_URL=sqlite:///./juicequ.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/juicequ

# =============================================================================
# Security Settings
# =============================================================================
# REQUIRED: Generate a strong secret key. Must be at least 32 characters
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Kolosal AI Configuration
# =============================================================================
# Get your API key from https://kolosal.ai
KOLOSAL_API_KEY=your-kolosal-api-key-here
KOLOSAL_API_BASE=https://api.kolosal.ai/v1
KOLOSAL_MODEL=qwen-3-30b

# =============================================================================
# Google Cloud Configuration (for Speech-to-Text)
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
# Path to service account credentials JSON file
GCP_SPEECH_CREDENTIALS=/path/to/credentials.json

# =============================================================================
# ChromaDB Configuration (for RAG)
# =============================================================================
CHROMA_PERSIST_DIRECTORY=./chroma_data

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
