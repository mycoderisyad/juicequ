# ============================================
# JuiceQu Backend - Environment Variables
# ============================================
# Copy this file to .env and fill with your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=JuiceQu API
APP_VERSION=1.0.0
APP_ENV=development
# Options: development, staging, production
DEBUG=true

# ===========================================
# DATABASE
# ===========================================
# For local development (SQLite):
DATABASE_URL=sqlite:///./juicequ.db

# For Docker/Production (PostgreSQL):
# DATABASE_URL=postgresql://postgres:postgres@db:5432/juicequ

# ===========================================
# SECURITY
# ===========================================
# REQUIRED: Generate with: openssl rand -hex 32
SECRET_KEY=change-me-to-a-strong-random-string-min-32-chars

# Token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
VERIFICATION_TOKEN_EXPIRE_MINUTES=1440
RESET_TOKEN_EXPIRE_MINUTES=60

# ===========================================
# CORS
# ===========================================
# Comma-separated origins
CORS_ORIGINS=http://localhost:3000

# ===========================================
# AI SERVICES
# ===========================================
# Google Gemini AI (REQUIRED for AI features)
GEMINI_API_KEY=your-gemini-api-key

# Kolosal API (for voice/chat features)
KOLOSAL_API_KEY=your-kolosal-api-key
KOLOSAL_API_BASE=https://api.kolosal.ai/v1

# Google Cloud Speech-to-Text (optional)
GCP_SPEECH_CREDENTIALS=

# ===========================================
# GOOGLE OAUTH (Optional)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_BASE_PATH=./uploads
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif

# ===========================================
# EMAIL / SMTP (Optional)
# ===========================================
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=no-reply@juicequ.app
SMTP_FROM_NAME=JuiceQu
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# ===========================================
# FRONTEND URL
# ===========================================
# Used for email links, OAuth redirects
FRONTEND_URL=http://localhost:3000

# ===========================================
# VECTOR DATABASE (ChromaDB)
# ===========================================
CHROMA_PERSIST_DIRECTORY=./chroma_data
