# Application
APP_ENV=development
APP_NAME=JuiceQu API
APP_VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=sqlite:///./juicequ.db

# Security
SECRET_KEY=change-me-to-a-strong-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000

# Kolosal AI (optional)
KOLOSAL_API_KEY=
KOLOSAL_API_BASE=
KOLOSAL_MODEL=

# Google Cloud Speech-to-Text (optional)
GCP_PROJECT_ID=
GCP_SPEECH_CREDENTIALS=

# ChromaDB (RAG)
CHROMA_PERSIST_DIRECTORY=./chroma_data

# ExchangeRate API (optional)
EXCHANGERATE_API_KEY=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Storage
UPLOAD_BASE_PATH=./uploads
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif

# Email (SMTP)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=no-reply@juicequ.local
SMTP_FROM_NAME=JuiceQu
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Frontend URL (used in email links)
FRONTEND_URL=http://localhost:3000

# Token expirations (minutes)
VERIFICATION_TOKEN_EXPIRE_MINUTES=1440
RESET_TOKEN_EXPIRE_MINUTES=60

